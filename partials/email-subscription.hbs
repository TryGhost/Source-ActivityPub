<form class="gh-form flex items-center w-full bg-white max-w-lg text-xl relative h-16 hover:bg-stone-50 !border-2" data-members-form>
    <input class="gh-form-input text-stone-950" id="{{email_field_id}}" type="email" placeholder="jamie@example.com" required data-members-email>
    <button class="gh-button !h-14 !bg-stone-950 !hover:bg-stone-900 min-w-14" type="submit" aria-label="Get early access">
        <span><span>Get early access</span> {{> "icons/arrow"}}</span>
        {{> "icons/loader"}}
        {{> "icons/checkmark"}}
    </button>
    <p data-members-error class="!text-base"></p>
</form>